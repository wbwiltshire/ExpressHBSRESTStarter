<h1>{{title}}</h1>
<br />
<div class="row">
     {{#with customer}}
     <form id="createForm" class="form-horizontal col-md-6 bg-info rounded">
          <div class="form-group row">
               <label class="col-md-3 control-label text-right">First Name:</label>
               <div class="col-md-9">
                    <input name="FirstName" id="FirstName" type="text" class="form-control form-control-sm" value="{{FirstName}}" />
               </div>               
          </div>
          <div class="form-group row">
               <label class="col-md-3 control-label text-right">Last Name:</label>
               <div class="col-md-9">
                    <input name="LastName" id="LastName" type="text" class="form-control form-control-sme" value="{{LastName}}" />
               </div>               
          </div>
          <div class="form-group row">
               <label class="col-md-3 control-label text-right">E-Mail:</label>
               <div class="col-md-9">
                    <input name="EMail" id="EMail" type="text" class="form-control form-control-sm" value="{{EMail}}" />
               </div>               
          </div>
          <div class="form-group row">
               <div class="col-md-6 col-md-push-1">
               <input type="submit" value="Save" />
               </div>               
          </div>
     </form>
     {{/with}}
</div>
<br />
<div class="row">
     <div class="col-lg-4">
          <a href="/customer" class="btn btn-primary">Back</a>
     </div>
</div>
{{#contentFor 'pageScripts'}}
<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.5/handlebars.min.js" type="text/javascript"></script>
<script src="/javascripts/ajaxcommon.js" type="text/javascript"></script>
<script src="/javascripts/customeradd.js" type="text/javascript"></script>
{{/contentFor}}